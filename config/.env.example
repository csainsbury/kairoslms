GMAIL_DELEGATED_EMAIL=your_email@example.com  # Required for service account to access your mailbox

# Google Calendar API Settings
CALENDAR_CREDENTIALS_FILE=/app/config/credentials/calendar_credentials.json
CALENDAR_TOKEN_FILE=/app/config/credentials/calendar_token.json
# Service Account Settings (alternative to OAuth)
CALENDAR_AUTH_METHOD=oauth  # options: oauth, service_account
CALENDAR_SERVICE_ACCOUNT_FILE=/app/config/credentials/calendar_service_account.json
CALENDAR_DELEGATED_EMAIL=your_email@example.com  # Required for service account to access your calendar

