# Database Settings
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=kairoslms
DB_HOST=db
DB_PORT=5432

# API Settings
SECRET_KEY=your_generated_secret_key

# Gmail API Settings
GMAIL_CREDENTIALS_FILE=/app/config/credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=/app/config/credentials/gmail_token.json
# Service Account Settings (alternative to OAuth)
GMAIL_AUTH_METHOD=oauth  # options: oauth, service_account
